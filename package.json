{
	"name": "@enfusion-ai/x402-monorepo",
	"private": true,
	"version": "0.1.0",
	"description": "Monorepo for x402 facilitator, middleware, and examples",
	"type": "module",
	"packageManager": "bun@1.1.29",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "bun run -A ./scripts/build-all.ts",
		"dev:facilitator": "bun --cwd apps/facilitator run dev",
		"start:facilitator": "bun --cwd apps/facilitator run start",
		"typecheck": "tsc -b",
		"dev:examples:rest": "bun --cwd apps/example-rest run dev",
		"dev:examples:mcp": "bun --cwd apps/example-mcp run dev"
	},
	"devDependencies": {
		"typescript": "^5.6.3",
		"ts-node": "^10.9.2"
	}
}
